{
  "builders": [
    {
      "type": "lxc",
      "name": "lxc-centos-7-x64",
      "config_file": "/packer/lxc/config",
      "create_options": [
        "-f", "/packer/lxc/centos-7.conf"
      ],
      "template_name": "centos",
      "template_parameters": [
        "-R", "7",
        "-a", "x86_64"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "/packer/scripts/base.sh",
        "/packer/scripts/user.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "output": "/packer/builds/lxc-centos-7-server.box",
      "type": "vagrant"
    }
  ]
}
